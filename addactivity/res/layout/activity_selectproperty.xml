<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Selectproperty" 
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_property"
        android:textSize="15sp"
        android:textColor="#000000" />

       <ImageButton
           android:id="@+id/btnmovie"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_alignParentRight="true"
           android:layout_alignTop="@+id/btneat"
           android:layout_marginRight="52dp"
           android:background="@drawable/movie_button" />

       <ImageButton
           android:id="@+id/btneat"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_alignRight="@+id/textView1"
           android:layout_below="@+id/textView1"
           android:layout_marginTop="20dp"
           android:background="@drawable/eat_button" />

       <ImageButton
           android:id="@+id/btnshopping"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_alignLeft="@+id/btneat"
           android:layout_below="@+id/btneat"
           android:layout_marginTop="40dp"
           android:background="@drawable/shopping_button" />

       <ImageButton
           android:id="@+id/btnshow"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_alignLeft="@+id/btnmovie"
           android:layout_alignTop="@+id/btnshopping"
           android:background="@drawable/show_button" />

       <ImageButton
           android:id="@+id/btnother"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_alignLeft="@+id/btnshow"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="62dp"
           android:background="@drawable/other_button" />

       <ImageButton
           android:id="@+id/btnoutdoor"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_alignLeft="@+id/btnshopping"
           android:layout_alignTop="@+id/btnother"
           android:background="@drawable/outdoor_button" />

</RelativeLayout>